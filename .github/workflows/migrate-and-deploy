name: Migrate DB then Deploy

on:
  push:
    branches: [ main ]
  workflow_dispatch:

concurrency:
  group: prod-migrations
  cancel-in-progress: false

jobs:
  migrate:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - uses: actions/checkout@v4

      # If you use bun (your logs show "bun run build")
      - uses: oven-sh/setup-bun@v2
        with:
          bun-version: '1.1.30'

      - name: Install deps
        run: bun install --frozen-lockfile

      - name: Run Drizzle migrations (direct 5432)
        env:
          DRIZZLE_DATABASE_URL: ${{ secrets.DIRECT_DATABASE_URL }}
        run: |
          bunx drizzle-kit migrate
          # Optional sanity check
          bunx drizzle-kit status

  deploy:
    needs: migrate
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Vercel Production deploy
        run: curl -fsS -X POST "${{ secrets.VERCEL_DEPLOY_HOOK_URL }}"
